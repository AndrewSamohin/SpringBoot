<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <suppress checks="MissingJavadocMethod"/>
    <suppress checks="JavadocPackage"/>
    <suppress checks="JavadocVariable"/>
    <suppress checks="DesignForExtension"/>
    <suppress checks="HideUtilityClassConstructor"/>
    <suppress checks="FinalClass"/>
    <suppress checks="MagicNumber"/>
    <suppress checks="HiddenField"/>
    <suppress checks="FinalParameters"/>
    <suppress checks="LineLength" files=".*"/> <!-- Подавление ошибок длины строки -->
    <suppress checks="NewlineAtEndOfFile"/> <!-- Подавление ошибки отсутствия новой строки в конце файла -->
    <suppress checks="FileTabCharacter"/> <!-- Подавление ошибки использования табуляции -->

</suppressions>
